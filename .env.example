APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Europe/Warsaw

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis Configuration (for queues and cache)
# Docker service name: redis
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_QUEUE=default

# Mail Configuration
# Development: Use Mailpit (Docker service)
# Production: Configure via SystemSettings in Filament admin panel
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@paradocks.local"
MAIL_FROM_NAME="${APP_NAME}"

# Production SMTP (Gmail example - configure via admin panel)
# These will be overridden by email_settings table at runtime
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"


# Google Maps API
# Required for booking form location autocomplete
# Get your API key from: https://console.cloud.google.com/google/maps-apis/
# Enable: Maps JavaScript API and Places API
# Apply HTTP referrer restrictions for security
GOOGLE_MAPS_API_KEY=

# Google Maps Map ID (REQUIRED for map display in API v3.56+)
# Create at: https://console.cloud.google.com/google/maps-apis/studio/maps
# Steps: Map Management → Map IDs → + CREATE MAP ID
# Map Type: JavaScript, Map Style: Standard (or customize)
GOOGLE_MAPS_MAP_ID=AIzaSyBUdTmjpxzTi6WgIJ4ZFhRk2sPtXCrzXwQ

# Booking System Configuration
BOOKING_BUSINESS_HOURS_START=09:00
BOOKING_BUSINESS_HOURS_END=18:00
BOOKING_ADVANCE_HOURS=24
BOOKING_CANCELLATION_HOURS=24
BOOKING_TIMEZONE=Europe/Warsaw
BOOKING_SLOT_INTERVAL=15
BOOKING_MAX_DURATION=540

# SMS API Configuration (SMSAPI.PL)
# Get your token from: https://ssl.smsapi.pl/login
# Webhook secret: Generate random string for signature verification
SMSAPI_TOKEN=
SMSAPI_SERVICE=pl
SMSAPI_WEBHOOK_SECRET=

# SMS Spending Limits & Alerts
SMS_DAILY_LIMIT=500
SMS_MONTHLY_LIMIT=10000
SMS_ALERT_THRESHOLD=80
SMS_ALERT_EMAIL=admin@example.com
